extends layout 

block content
  include navbar.jade
  .w3-container
    .w3-container
      h1.w3-margin-left= title 
      a.w3-btn.w3-display-top.w3-margin-left.w3-border.w3-green(href="/recursos/download/"+recurso._id) Download

    ul.w3-ul 
        li.w3-margin-left Id do recurso: #{recurso._id} 
        li.w3-margin-left Produtor: #{recurso.idProdutor}
        li
          form.w3-container
            span Likes: 
              input.w3-border-0(id="num_likes" value=recurso.likes)=recurso.likes
            if recurso.users_liked.includes(user)
              a.w3-button.w3-light-green.w3-border.w3-small.w3-round(href="/recursos/atualizarLikes/" + recurso._id + "?tipo=dec" id="dislikeBtn") Like
            else
              a.w3-button.w3-light-grey.w3-border.w3-small.w3-round(href="/recursos/atualizarLikes/" + recurso._id + "?tipo=inc" id="likeBtn") Like
