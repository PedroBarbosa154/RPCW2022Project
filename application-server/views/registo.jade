extends layout 

block content
    h1(style="text-align: center;") Registar Utilizador
    .w3-container(style="display:flex;")
      .w3-container(style="position: absolute; left: 50%; top: 50%; transform: translate(-50%, -50%); padding: 10px;")
          form.w3-container(action="/registar", method="post")
              .w3-cell-row
                label.w3-text-grey Username
                input.w3-input.w3-border(type="text", name="username", placeholder="Enter your username")
              .w3-cell-row
                label.w3-text-grey Password
                input.w3-input.w3-border(type="password", name="password", placeholder="Enter your password")